{
  "$id": "https://open-metadata.org/schema/api/mcp/mcpProtocol.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "MCP Protocol",
  "description": "JSON Schema definitions for Model Context Protocol (MCP) objects",
  "type": "object",
  "javaType": "org.openmetadata.schema.api.mcp.MCPProtocol",
  "definitions": {
    "jsonRpcRequest": {
      "description": "JSON-RPC 2.0 request structure",
      "type": "object",
      "javaType": "org.openmetadata.schema.api.mcp.JsonRpcRequest",
      "properties": {
        "jsonrpc": {
          "type": "string",
          "default": "2.0"
        },
        "id": {
          "type": "string"
        },
        "method": {
          "type": "string"
        },
        "params": {
          "type": "object"
        }
      },
      "required": ["jsonrpc", "method"]
    },
    "jsonRpcResponse": {
      "description": "JSON-RPC 2.0 response structure",
      "type": "object",
      "javaType": "org.openmetadata.schema.api.mcp.JsonRpcResponse",
      "properties": {
        "jsonrpc": {
          "type": "string",
          "default": "2.0"
        },
        "id": {
          "type": "string"
        },
        "result": {
          "type": "object"
        },
        "error": {
          "$ref": "#/definitions/jsonRpcError"
        }
      },
      "required": ["jsonrpc"]
    },
    "jsonRpcError": {
      "description": "JSON-RPC 2.0 error structure",
      "type": "object",
      "javaType": "org.openmetadata.schema.api.mcp.JsonRpcError",
      "properties": {
        "code": {
          "type": "integer"
        },
        "message": {
          "type": "string"
        },
        "data": {
          "type": "object"
        }
      },
      "required": ["code", "message"]
    },
    "serverInfo": {
      "description": "Server information for MCP",
      "type": "object",
      "javaType": "org.openmetadata.schema.api.mcp.ServerInfo",
      "properties": {
        "name": {
          "type": "string"
        },
        "version": {
          "type": "string"
        }
      },
      "required": ["name", "version"]
    },
    "toolCapabilities": {
      "description": "Tool capabilities for MCP",
      "type": "object",
      "javaType": "org.openmetadata.schema.api.mcp.ToolCapabilities",
      "properties": {
        "listChanged": {
          "type": "boolean",
          "default": true
        }
      }
    },
    "capabilities": {
      "description": "Server capabilities for MCP",
      "type": "object",
      "javaType": "org.openmetadata.schema.api.mcp.Capabilities",
      "properties": {
        "search": {
          "type": "boolean",
          "default": true
        },
        "tools": {
          "$ref": "#/definitions/toolCapabilities"
        }
      }
    },
    "initializeResponse": {
      "description": "Response to the initialize request in MCP",
      "type": "object",
      "javaType": "org.openmetadata.schema.api.mcp.InitializeResponse",
      "properties": {
        "serverInfo": {
          "$ref": "#/definitions/serverInfo"
        },
        "capabilities": {
          "$ref": "#/definitions/capabilities"
        },
        "protocolVersion": {
          "type": "string"
        },
        "functions": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/toolDefinition"
          }
        }
      },
      "required": ["serverInfo", "protocolVersion", "functions"]
    },
    "jsonSchemaProperty": {
      "description": "JSON Schema property definition",
      "type": "object",
      "javaType": "org.openmetadata.schema.api.mcp.JsonSchemaProperty",
      "properties": {
        "type": {
          "type": "string"
        },
        "description": {
          "type": "string"
        }
      },
      "required": ["type"]
    },
    "jsonSchemaObject": {
      "description": "JSON Schema object definition",
      "type": "object",
      "javaType": "org.openmetadata.schema.api.mcp.JsonSchemaObject",
      "properties": {
        "type": {
          "type": "string",
          "default": "object"
        },
        "properties": {
          "type": "object",
          "additionalProperties": {
            "$ref": "#/definitions/jsonSchemaProperty"
          }
        },
        "required": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "required": ["type", "properties"]
    },
    "toolDefinition": {
      "description": "Tool definition for MCP",
      "type": "object",
      "javaType": "org.openmetadata.schema.api.mcp.ToolDefinition",
      "properties": {
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "parameters": {
          "$ref": "#/definitions/jsonSchemaObject"
        }
      },
      "required": ["name", "description", "parameters"]
    },
    "toolsListResponse": {
      "description": "Response to the tools/list request in MCP",
      "type": "object",
      "javaType": "org.openmetadata.schema.api.mcp.ToolsListResponse",
      "properties": {
        "tools": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/toolDefinition"
          }
        },
        "nextCursor": {
          "type": "string"
        }
      },
      "required": ["tools"]
    },
    "errorContent": {
      "description": "Error content for tool execution response",
      "type": "object",
      "javaType": "org.openmetadata.schema.api.mcp.ErrorContent",
      "properties": {
        "error": {
          "type": "string"
        }
      },
      "required": ["error"]
    },
    "textContent": {
      "description": "Text content for tool execution response",
      "type": "object",
      "javaType": "org.openmetadata.schema.api.mcp.TextContent",
      "properties": {
        "type": {
          "type": "string",
          "const": "text"
        },
        "text": {
          "type": "string"
        }
      },
      "required": ["type", "text"]
    },
    "toolExecutionResponse": {
      "description": "Response to a tool execution request",
      "type": "object",
      "javaType": "org.openmetadata.schema.api.mcp.ToolExecutionResponse",
      "properties": {
        "name": {
          "type": "string"
        },
        "content": {
          "type": "object"
        }
      },
      "required": ["name", "content"]
    },
    "toolExecutionResult": {
      "description": "Tool execution result with content items",
      "type": "object",
      "javaType": "org.openmetadata.schema.api.mcp.ToolExecutionResult",
      "properties": {
        "content": {
          "type": "array",
          "items": {
            "oneOf": [
              {
                "$ref": "#/definitions/textContent"
              }
            ]
          }
        },
        "isError": {
          "type": "boolean",
          "default": false
        }
      },
      "required": ["content"]
    }
  }
} 